@code {
    private Lang currentLang = Lang.RUSSIAN;
    private string logoPath = ruLangLogo;

    private static string ruLangLogo = "img/ru_ru_lang_logo.png";
    private static string enLangLogo = "img/en_en_lang_logo.png";

    enum Lang
    {
        ENGLISH,
        RUSSIAN
    }

    void ChangeLang()
    {
        if (currentLang == Lang.RUSSIAN)
            currentLang = Lang.ENGLISH;
        else
            currentLang = Lang.RUSSIAN;

        switch (currentLang)
        {
            case Lang.ENGLISH:
                logoPath = enLangLogo;
                break;
            case Lang.RUSSIAN:
                logoPath = ruLangLogo;
                break;
        }
    }
}

