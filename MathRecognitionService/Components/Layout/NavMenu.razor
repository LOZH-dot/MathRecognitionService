@code {
    private Lang currentLang = Lang.RUSSIAN;
    private string logoPath = ruLangLogo;

    public bool LoginDialogOpen { get; set; }

    private static string ruLangLogo = "img/ru_ru_lang_logo.png";
    private static string enLangLogo = "img/en_en_lang_logo.png";

    enum Lang
    {
        ENGLISH,
        RUSSIAN
    }

    private async Task OnLoginDialogClose(bool accepted)
    {
        LoginDialogOpen = false;
        StateHasChanged();
    }

    private void OpenLoginDialog()
    {
        LoginDialogOpen = true;
        StateHasChanged();
    }
}

